{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration" : true,
    "outDir" : "out",
    "target" : "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitUseStrict": true,
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src/**/*"
  ]
}